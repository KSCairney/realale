<p id="notice"><%= notice %></p>

<h1 class="titlelogo">Taps</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Brewery</th>
      <th>Style</th>
      <th>Color</th>
      <th>Description</th>
      <th>Img url</th>
      <th>Draft</th>
      <th>ABV</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @taps.each do |tap| %>
      <tr>
        <td><%= tap.name %></td>
        <td><%= tap.brewery %></td>
        <td><%= tap.style %></td>
        <td><%= tap.color %></td>
        <td><%= tap.description %></td>
        <td><%= tap.img_url %></td>
        <td><%= tap.draft %></td>
        <td><%= tap.abv %></td>
        <td><%= link_to 'Show', tap %></td>
        <td><%= link_to 'Edit', edit_tap_path(tap) %></td>
        <td><%= link_to 'Destroy', tap, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

